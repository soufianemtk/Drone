<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.abandere.droneandroid.CommandesDrone"
    android:orientation="vertical"
    android:id="@+id/layout1">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="120px"
        android:orientation="vertical"
        android:id="@+id/layout2">

        <Button
            android:layout_width="81dp"
            android:layout_height="wrap_content"
            android:text="Up"
            android:id="@+id/buttonUp"
            android:layout_row="0"
            android:layout_column="1"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="120px"
        android:orientation="horizontal"
        android:layout_marginLeft="50px"
        android:layout_marginRight="50px">

        <Button
            android:layout_width="81dp"
            android:layout_height="wrap_content"
            android:text="TLeft"
            android:id="@+id/buttonTleft"
            android:layout_row="3"
            android:layout_column="0"
            android:layout_gravity="left"
            android:layout_weight="1"/>

        <Button
            android:layout_width="83dp"
            android:layout_height="wrap_content"
            android:text="Fwd"
            android:id="@+id/buttonFwd"
            android:layout_row="2"
            android:layout_column="1"
            android:layout_weight="1.31"/>
        <Button
            android:layout_width="87dp"
            android:layout_height="wrap_content"
            android:text="TRight"
            android:id="@+id/buttonTright"
            android:layout_row="3"
            android:layout_column="2"
            android:layout_gravity="right"
            android:layout_weight="1"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="120px"
        android:orientation="horizontal"
        android:layout_marginLeft="50px"
        android:layout_marginRight="50px">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="MvLeft"
        android:id="@+id/buttonMvleft"
        android:layout_row="2"
        android:layout_column="0"
        android:layout_gravity="left"
        android:layout_weight="1" />


    <Button
        android:layout_width="83dp"
        android:layout_height="wrap_content"
        android:text="Hover"
        android:id="@+id/buttonHover"
        android:layout_row="1"
        android:layout_column="1"
        android:layout_weight="1" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="MvRight"
            android:id="@+id/buttonMvRight"
            android:layout_row="2"
            android:layout_column="2"
            android:layout_weight="1"
            android:layout_gravity="right"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="120px"
        android:orientation="vertical">

        <Button
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="Bwd"
            android:id="@+id/buttonBwd"
            android:layout_row="3"
            android:layout_column="1"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center"  />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="120px"
        android:orientation="vertical">

        <Button
            android:layout_width="96dp"
            android:layout_height="wrap_content"
            android:text="Down"
            android:id="@+id/buttonDown"
            android:layout_row="11"
            android:layout_column="1"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center" />

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40px"
        android:orientation="horizontal"
        android:layout_marginLeft="50px"
        android:layout_marginRight="50px">

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="120px"
        android:orientation="horizontal"
        android:layout_marginLeft="50px"
        android:layout_marginRight="50px">

        <Button
            android:layout_width="81dp"
            android:layout_height="wrap_content"
            android:text="Adjust"
            android:id="@+id/buttonAdjust"
            android:layout_row="20"
            android:layout_column="0"
            android:layout_gravity="left"
            android:layout_weight="0.40"  />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TakeOff"
        android:id="@+id/buttonTakeoff"
        android:layout_row="20"
        android:layout_column="1"
        android:layout_weight="0.22" />



    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Land"
        android:id="@+id/buttonLand"
        android:layout_row="20"
        android:layout_column="2"
        android:layout_weight="0.78"
        android:layout_gravity="right"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="120px"
        android:orientation="vertical">

        <Button
            android:layout_width="96dp"
            android:layout_height="wrap_content"
            android:text="End"
            android:id="@+id/buttonEnd"
            android:layout_row="23"
            android:layout_column="1"
            android:layout_centerVertical="true"
            android:layout_gravity="center" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="15px"
        android:orientation="horizontal"
        android:layout_marginLeft="50px"
        android:layout_marginRight="50px">

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="120px"
        android:orientation="vertical">

        <Button
            android:layout_width="140dp"
            android:layout_height="wrap_content"
            android:text="Emergency"
            android:id="@+id/buttonEmergency"
            android:layout_row="28"
            android:layout_column="1"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center" />


    </LinearLayout>


</LinearLayout>
